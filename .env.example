# NEXT_PUBLIC_APPWRITE_USER_SETTINGS_COLLECTION_ID=user_settings
# NEXT_PUBLIC_APPWRITE_CHAT_PROFILES_COLLECTION_ID=chat_profiles
# NEXT_PUBLIC_APPWRITE_CHATS_COLLECTION_ID=chats
# NEXT_PUBLIC_APPWRITE_CHAT_MESSAGES_COLLECTION_ID=chat_messages
# NEXT_PUBLIC_APPWRITE_FAVORITES_COLLECTION_ID=favorites
# NEXT_PUBLIC_APPWRITE_RATE_LIMITS_COLLECTION_ID=rate_limits
# NEXT_PUBLIC_APPWRITE_USER_STATS_COLLECTION_ID=user_stats
# NEXT_PUBLIC_APPWRITE_USER_SESSIONS_COLLECTION_ID=user_sessions
# NEXT_PUBLIC_APPWRITE_RESERVED_EMAILS_COLLECTION_ID=reserved_emails
# NEXT_PUBLIC_APPWRITE_PROFILES_COLLECTION_ID=profiles

# ================================
# Bucket IDs (Optional - defaults provided)
# ================================
# NEXT_PUBLIC_APPWRITE_AVATARS_BUCKET_ID=avatars

# Groq (Free tier available)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Required for Gemini (free tier available)
# GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here

# OpenAI (Optional - users can provide their own key)
# Get from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (Optional - users can provide their own key)
# Get from: https://console.anthropic.com/
# ANTHROPIC_API_KEY=your_claude_api_key_here

# ElevenLabs for high-quality voice synthesis
# Get from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Pollinations for image generation
# Get from: https://pollinations.ai/
POLLINATIONS_API_KEY=your_pollinations_api_key_here

# -------------------------------------------
# Rate Limiting (Defaults)
# -------------------------------------------
# Guest users: 10 chat messages/hour, 5 images/hour
# Authenticated users: 100 chat messages/hour, 50 images/hour
# Customize in lib/rate-limit.ts